@model ApiProject.Dtos.EmployeeDto
@{
    ViewData["Title"] = "Employee Detail";
}

@if (Model.Employee_name == null)
{
    <div class="container p-3 my-3 border empty_table">
        <span class="badge badge-secondary empty_message">We couldn´t find any employee with the provided id, please try with another one</span>
        <div class="row">
            <button type="button" class="btn btn-primary btn_back">
                <a asp-area="" asp-controller="Home" asp-action="Index">Back</a>
            </button>
        </div>
    </div>
}
else
{
    <div class="container p-3 my-3 border">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Salary</th>
                    <th>Anual Salary</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Employee_name</td>
                    <td>@Model.Employee_age</td>
                    <td>@Model.Employee_salary_string</td>
                    <td>@Model.Employee_anual_salary_string</td>
                </tr>
            </tbody>
        </table>
        <div class="row">
            <button type="button" class="btn btn-primary btn_back">
                <a asp-area="" asp-controller="Home" asp-action="Index">Back</a>
            </button>
        </div>
    </div>
}